<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#E89F40"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <view
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        class="com.mattseipel.happyslappyfuntime.app.GameBoardCustomView"
        android:id="@+id/gameBoardView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/menuIBTN" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/menuIBTN"
        android:background="@drawable/menu"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:onClick="openMenu" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brick"
        android:id="@+id/brickBTN"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/menuIBTN"
        android:layout_marginLeft="90dp"
        android:checked="false" />

</RelativeLayout>