<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mattseipel.happyslappyfuntime.app" >

    <uses-sdk
        android:maxSdkVersion="19"
        android:minSdkVersion="17"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="Blockade2D"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.mattseipel.happyslappyfuntime.app.MainActivity"
            android:label="Blockade2D"
            android:theme="@android:style/Theme.NoTitleBar"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mattseipel.happyslappyfuntime.app.AnimationTesting"
            android:label="@string/title_activity_animation_testing" >
        </activity>
        <activity
            android:name="com.mattseipel.happyslappyfuntime.app.SurfaceViewExample"
            android:label="@string/title_activity_surface_view_example" >
        </activity>
        <activity
            android:name="com.mattseipel.happyslappyfuntime.app.GameBoard"
            android:screenOrientation="landscape"
            android:label="Blockade2D"
            android:theme="@android:style/Theme.NoTitleBar">
        </activity>
    </application>

</manifest>
